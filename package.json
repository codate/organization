{
    "name": "@codate/organization",
    "version": "1.0.0",
    "description": "Organizations e persons microservice",
    "author": "Charles Viegas <charles.viegas@codate.com.br>",
    "private": false,
    "main": "main.mjs",
    "license": "UNLICENSED",
    "keywords": [
        "microservice architecture",
        "exam",
        "person",
        "organization"
    ],
    "scripts": {
        "start": "node -r esm $NODE_DEBUG_OPTION main.mjs | bunyan -o short",
        "pretest": "mongodb-runner start",
        "test": "mocha -r esm -r chai/register-expect $NODE_DEBUG_OPTION test/**/*.mjs --exit | bunyan -o short",
        "posttest": "mongodb-runner stop",
        "quality": "eslint ./src/**/*.mjs",
        "postinstall": "node -e \"var s='../src',d='node_modules/src',fs=require('fs');fs.exists(d,function(e){e||fs.symlinkSync(s,d,'dir')});\"",
        "build-image": "docker build -t codate/organization:latest .",
        "publish-image": "docker push codate/organization:latest"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:codate/organization.git"
    },
    "dependencies": {
        "axios": "^0.18.0",
        "body-parser": "^1.18.3",
        "bunyan": "^1.8.12",
        "cors": "^2.8.4",
        "esm": "^3.0.49",
        "express": "^5.0.0-alpha.6",
        "express-validation": "^1.0.2",
        "helmet": "^3.12.1",
        "joi": "^13.6.0",
        "lodash": "^4.17.10",
        "moment": "^2.22.2",
        "moment-timezone": "^0.5.17",
        "mongoose": "^5.1.3",
        "mongoose-geojson-schema": "^2.1.3"
    },
    "devDependencies": {
        "chai": "^4.1.2",
        "eslint": "^4.19.1",
        "eslint-config-standard": "^11.0.0",
        "eslint-plugin-import": "^2.12.0",
        "eslint-plugin-node": "^6.0.1",
        "eslint-plugin-promise": "^3.8.0",
        "eslint-plugin-standard": "^3.1.0",
        "istanbul": "^0.4.5",
        "mocha": "^5.2.0",
        "mongodb-runner": "^3.6.1",
        "supertest": "^3.1.0"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": "standard",
        "rules": {
            "indent": [
                2,
                4
            ],
            "quotes": [
                2,
                "single"
            ],
            "space-before-function-paren": 0
        },
        "globals": {}
    }
}
